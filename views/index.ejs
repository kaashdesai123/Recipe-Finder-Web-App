<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Recipe Finder</title>
</head>
<body>
    <h1>Recipe Finder</h1>

    <form action="/search" method="post">
        <input type="text" name="query" placeholder="Search by ingredient...">
        <button type="submit">Search</button>
    </form>

    <h2>Recipes</h2>
    <ul>
        <% recipes.forEach(recipe => { %>
            <li>
                <h3><%= recipe.title %></h3>
                <img src="<%= recipe.imageUrl %>" alt="<%= recipe.title %>" width="200">
                <p>Ingredients: <%= recipe.ingredients.join(', ') %></p>
                <p>Steps: <%= recipe.steps.join(', ') %></p>
            </li>
        <% }); %>
    </ul>
</body>
</html>
